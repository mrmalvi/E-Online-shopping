<h1>Your Orders</h1>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>#</th>
      <th>Total Price</th>
      <th>Order Date</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each_with_index do |order, index| %>
      <!-- Order Row -->
      <tr class="table-primary">
        <td><%= index + 1 %></td>
        <td>Rs <%= order.total_price %></td>
        <td><%= display_created_date(order.created_at) %></td>
      </tr>

      <!-- Line Items Sub-list -->
      <tr>
        <td colspan="3">
          <div class="ml-4">
            <h6>Items:</h6>
            <ul class="list-group">
              <% order.line_items.each do |line_item| %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <%= line_item.product.name %>
                  <span class="badge badge-primary badge-pill">Rs <%= line_item.total_price %></span>
                </li>
              <% end %>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
