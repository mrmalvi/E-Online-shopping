<div class="container my-4">
  <h1 class="text-center">Products</h1>

  <% @categories.each do |category| %>
    <% next if !category.products.exists? %>
    <div class="category-section my-5">
      <h2 class="text-center"><%= category.name %></h2>
      <hr>

      <div class="row">
        <% category.products.each do |product| %>
          <div class="col-md-4">
            <div class="card mb-4">
              <%= image_tag product.images.first.url, class: "card-img-top", alt: product.name if product.images.attached? %>
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><%= truncate(product.description, length: 100) %></p>
                <p class="card-text"><strong>Price:</strong> $<%= product.price %></p>
                <a href="<%= users_product_path(product) %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
