<div class="container mt-5">
  <div class="row">
    <div class="col-md-3">
      <div class="list-group">
        <a href="#" class="list-group-item list-group-item-action active">
          Dashboard
        </a>
        <a href="<%= users_orders_path(current_user) %>" class="list-group-item list-group-item-action">My Orders</a>
        <a href="#" class="list-group-item list-group-item-action">Wishlist</a>
        <a href="#" class="list-group-item list-group-item-action">Settings</a>
      </div>
    </div>
    <div class="col-md-9">
      <div class="card">
        <div class="card-header">
          Welcome to Your Dashboard
        </div>
        <div class="card-body">
          <h5 class="card-title">Order Summary</h5>
          <p class="card-text">You have placed <strong>3 orders</strong> this month.</p>
          <a href="#" class="btn btn-primary">View Orders</a>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-md-4">
          <div class="card text-white bg-success mb-3">
            <div class="card-header">Completed Orders</div>
            <div class="card-body">
              <h5 class="card-title"><%= current_user.orders.delivered.count %> Orders</h5>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card text-white bg-warning mb-3">
            <div class="card-header">Pending Orders</div>
            <div class="card-body">
              <h5 class="card-title"><%= current_user.orders.pending.count %> Orders</h5>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card text-white bg-danger mb-3">
            <div class="card-header">Cancelled Orders</div>
            <div class="card-body">
              <h5 class="card-title"><%= current_user.orders.cancelled.count %> Order</h5>
            </div>
          </div>
        </div>
      </div>

      <div class="card mt-4">
        <div class="card-header">
          Recent Activity
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">You purchased "Product 1" on 12th August</li>
          <li class="list-group-item">You added "Product 2" to your wishlist</li>
          <li class="list-group-item">You updated your profile information</li>
        </ul>
      </div>
    </div>
  </div>
</div>
